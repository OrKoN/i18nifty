{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "rangeStrategy": "bump",
  "ignorePaths": [".github/**"],
  "bumpVersion": "patch",
  "packageRules": [
    {
      "packagePatterns": ["*"],
      "excludePackagePatterns": ["powerhooks", "tsafe"],
      "enabled": false
    },
    {
      "packagePatterns": ["powerhooks", "tsafe"],
      "groupName": "homegrown",
      "matchUpdateTypes": ["minor", "patch"],
      "automerge": true
    }
  ]
}
